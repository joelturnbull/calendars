.row
  .six.columns.centered

    %img{:src=>"assets/clmc.png",:style=>"margin: 20px 0 15px -5px",:alt=>"Cincinnati Live Music Calendars"}

    %p Subscribe to live music event feeds from all of your favorite venues around town! 

    - if last_update = Location.last_update 
      .row
        .eight.columns
          %p{:class => "last-updated"}
            Last Update -  
            %b #{last_update.strftime('%A, %b %d %Y')}
        .four.columns
          <a href="https://twitter.com/share" class="twitter-share-button" data-text="Subscribe to Live Music Events in Cincinnati!" data-via="joelturnbull">Tweet</a>
          <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
        %hr


    %ul
      -if master_location
        %li 
          .row
            .four.columns
              = Location.feed_name
            .four.columns
              = link_to "Google", master_location.google_url
            .four.columns
              = link_to "iCal", master_location.ical_url
        %hr
          
      -locations.each do |location|
        %li
          .row
            .four.columns
              = location.feed_name
            .four.columns
              = link_to "Google", location.google_url
            .four.columns
              = link_to "iCal", location.ical_url

